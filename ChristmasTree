package com.vedant.java;
import java.util.Scanner;
public class XMaxTree {
    public static void printSegment(int segments,int height) { // params for 
segments and height
        int totSpace=((height*segments)/2);
        for( int leaves=1;leaves<=segments;leaves++) { // loop for segments prints 
leaves(each segment) based on user input
            int rowSpace=totSpace;
          for(int row=1; row<=height;row++) {    // loops row until height limit. 
height is user input
            for ( int space=1; space<=rowSpace; space++) {
                System.out.print(" ");
            }
            for(int column=1;column<=2*row+2*leaves-3;++column) { // loop that 
prints odd amount of columns
                System.out.print(".");
            }
            rowSpace--; // decrementing row space
            System.out.println();
        }
            totSpace--; // decrementing totSpace
      }
}
    public static void main(String[] args) {
        Scanner answer= new Scanner(System.in);        // segment user input for 
tree
        System.out.print("Enter amount of segments x-mas for  tree");
         int segments= answer.nextInt();
        System.out.print("Enter height for x-mas tree");
         int height=answer.nextInt();
        printSegment(segments, height);  // prints tree
//stump stem
        int totSpace=((height*segments)/2);
        for ( int space=1; space<=totSpace; space++) {
            System.out.print(" "); // spacing for stem
        }
        System.out.println(".");
        for ( int space=1; space<=totSpace; space++) {
            System.out.print(" ");
        }
        System.out.println("."); // trunk
        //stump base
        totSpace=((height*segments)-2);
        String stumpStr="";
        for ( int stump=1; stump<=totSpace; stump++) {
            stumpStr+="."; // populating stumpbase into a variable
        }
        totSpace=((height*segments)-stumpStr.length())/2; // forloop that 
calculates centering of stump based on height
        for ( int space=1; space<=totSpace; space++) {
            System.out.print(" ");
        }
        System.out.println(stumpStr);
    }
}
